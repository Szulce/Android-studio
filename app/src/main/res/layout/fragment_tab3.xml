<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/constraintLayout"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="#C8A798"
                                                   tools:context=".ui.main.PlaceholderFragment">

    <ProgressBar
            style="@android:style/Widget.Material.ProgressBar"
            android:layout_width="327dp"
            android:layout_height="305dp"
            android:minWidth="403dp"
            android:minHeight="365dp"
            android:id="@+id/progressBarCountDown"
            android:visibility="visible" tools:visibility="visible"
            android:layout_marginTop="160dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="90dp"
            android:layout_marginRight="90dp" android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewTimer" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="91dp" android:layout_marginStart="91dp"
            app:layout_constraintHorizontal_bias="0.505" app:layout_constraintVertical_bias="0.835" tools:targetApi="lollipop"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@drawable/play"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            app:backgroundTint="#8E2E44"
            android:clickable="true"
            android:background="#8E2E44"
            android:id="@+id/floatingActionButtonPlay"
            android:layout_marginBottom="136dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="76dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="76dp" android:focusable="true"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/textViewTimer"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@drawable/pause"
            android:layout_width="55dp"
            android:layout_height="68dp"
            app:backgroundTint="#8E2E44"
            android:clickable="true"
            android:id="@+id/floatingActionButtonPause"
            android:layout_marginBottom="108dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/floatingActionButtonStop" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/floatingActionButtonPlay" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" android:focusable="true"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textViewTimer"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@drawable/stop"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:background="#8E2E44"
            app:backgroundTint="#8E2E44"
            android:clickable="true"
            android:id="@+id/floatingActionButtonStop"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp"
            android:focusable="true"
            app:layout_constraintStart_toEndOf="@+id/floatingActionButtonPlay" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.748"
            android:layout_marginBottom="136dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/textViewTimer"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewTimer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="@font/lobster_two_bold" android:textColor="@color/colorAccent" android:textSize="72sp"
            android:text="01:00" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/floatingActionButtonPlay"/>
    <ImageView
            android:src="@drawable/workout_play"
            android:layout_width="144dp"
            android:layout_height="196dp"
            android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:contentDescription="excercise image"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewTimer" app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>