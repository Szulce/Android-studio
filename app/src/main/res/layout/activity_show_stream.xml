<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mastodon.ShowStream">

    <ListView
            android:layout_width="395dp"
            android:layout_height="715dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp"
            android:id="@+id/listViewStream"/>
    <Button
            android:text="Download local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:onClick="downloadLocal"
            app:layout_constraintStart_toEndOf="@+id/button5" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/listViewStream" android:layout_marginBottom="160dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Downland public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button5"
            android:onClick="downloadPublic"
            app:layout_constraintStart_toEndOf="@+id/listViewStream"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button4"
            android:layout_marginBottom="160dp" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>