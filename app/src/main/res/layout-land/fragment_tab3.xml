<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/constraintLayout"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="#C8A798"
                                                   tools:context=".ui.main.PlaceholderFragment">

    <ProgressBar
            style="@style/Widget.MaterialProgressBar.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="403dp"
            android:minHeight="365dp"
            android:id="@+id/progressBarCountDown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.69"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/imageView2"
            android:layout_marginRight="8dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@drawable/play"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:clickable="true"
            android:id="@+id/floatingActionButtonPlay"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="220dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="220dp" android:focusable="true"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/floatingActionButtonPause"
            android:layout_marginRight="8dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@drawable/pause"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:clickable="true"
            android:id="@+id/floatingActionButtonPause"
            app:layout_constraintBottom_toBottomOf="parent"
            android:focusable="true"
            android:layout_marginEnd="64dp" app:layout_constraintEnd_toStartOf="@+id/floatingActionButtonStop"
            android:layout_marginRight="64dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@drawable/stop"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:clickable="true"
            android:id="@+id/floatingActionButtonStop"
            android:layout_marginEnd="200dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="200dp"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="96dp" android:id="@+id/textViewTimer" app:layout_constraintStart_toStartOf="parent"
            app:fontFamily="@font/lobster_two_bold" android:textColor="@color/colorAccent" android:textSize="72sp"
            android:text="01:00"
            android:layout_marginLeft="120dp" android:layout_marginStart="120dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.68"/>
    <ImageView
            android:src="@drawable/workout_play"
            android:layout_width="144dp"
            android:layout_height="196dp"
            android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:contentDescription="excercise image"
            app:layout_constraintStart_toEndOf="@+id/textViewTimer" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toTopOf="@+id/floatingActionButtonStop"/>

</androidx.constraintlayout.widget.ConstraintLayout>