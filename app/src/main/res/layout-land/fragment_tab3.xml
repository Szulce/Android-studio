<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/constraintLayout"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="#C8A798"
                                                   tools:context=".ui.main.PlaceholderFragment">

    <ProgressBar
            android:layout_width="237dp"
            android:layout_height="212dp"
            android:minWidth="403dp"
            android:minHeight="365dp"
            android:id="@+id/progressBarCountDown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/imageView2"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="parent" android:visibility="visible" tools:visibility="visible"
            app:layout_constraintHorizontal_bias="0.152" app:layout_constraintVertical_bias="0.794"
            style="@style/Widget.MaterialProgressBar.ProgressBar"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@drawable/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/floatingActionButtonPlay"
            android:focusable="true"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView2" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/textViewTimer" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.259"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@drawable/pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/floatingActionButtonPause"
            android:focusable="true"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/floatingActionButtonPlay" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView2" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/textViewTimer" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.497"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@drawable/stop"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:clickable="true"
            android:id="@+id/floatingActionButtonStop"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@+id/floatingActionButtonPause" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView2" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/textViewTimer" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.765"/>
    <TextView
            android:layout_width="123dp"
            android:layout_height="76dp" android:id="@+id/textViewTimer" app:layout_constraintStart_toStartOf="parent"
            app:fontFamily="@font/lobster_two_bold" android:textColor="@color/colorAccent" android:textSize="50sp"
            android:text="01:00"
            android:layout_marginLeft="108dp" android:layout_marginStart="108dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.68"/>
    <ImageView
            android:src="@drawable/workout_play"
            android:layout_width="114dp"
            android:layout_height="152dp"
            android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="excercise image"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"
            android:layout_marginEnd="80dp" android:layout_marginRight="80dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>